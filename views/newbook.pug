extends layout

block content
  if errors
      include error
  h1 New Book
  form(method='post')
    - if (bookTitle) {
      p
        label(for='title') Title
        input#title(type='text' name='title' value='#{book.title}')
    - } else {
      p
        label(for='title') Title
        input#title(type='text' name='title')
    - }
    - if (bookAuthor) {
      p
        label(for='author') Author
        input#author(type='text' name='author' value='#{book.author}')
    - } else {
      p
        label(for='author') Author
        input#author(type='text' name='author')
    - }
    - if (bookGenre) {
      p
        label(for='genre') Genre
        input#genre(type='text' name='genre' value='#{book.genre}')
    - } else {
      p
        label(for='genre') Genre
        input#genre(type='text' name='genre')
    - }
    - if (bookPublished) {
      p
        label(for='first_published') First Published
        input#first_published(type='text' name='first_published' value='#{book.published}')
    - } else {
      p
        label(for='first_published') First Published
        input#first_published(type='text' name='first_published')
    - }
    p
      input#button(type='submit' value='Create New Book')


